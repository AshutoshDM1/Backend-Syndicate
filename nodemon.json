{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules"],
  "exec": "ts-node src/index.ts",
  "legacyWatch": true,
  "pollingInterval": 500,
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "delay": 100
}
