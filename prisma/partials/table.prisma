// =============================================================================
// TABLE MANAGEMENT DOMAIN
// =============================================================================

model Table {
  id             String      @id @default(uuid())
  number         String      // e.g., "A1", "B2"
  status         TableStatus @default(AVAILABLE)
  size           TableSize   @default(SMALL)
  orderId        String?
  floor          Int

  // Relations
  orders Order[]
  
  @@map("table")
}